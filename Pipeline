pipeline {
    agent any 
    
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/MaheshGit5096/Terraform-New_Jenkins.git'
            }
        }
        stage('init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('validate') {
            steps {
                sh 'terraform validate'                
            }
        }
        stage('plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('Terraform Apply') {
            steps {
                script {
                    input 'Deploy changes?'
                    sh 'terraform apply -auto-approve'
            }
        }
    }
}
